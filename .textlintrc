{
  "rules": {
    "preset-jtf-style": {
        "1.2.1.句点(。)と読点(、)": false,
        "1.2.2.ピリオド(.)とカンマ(,)": false,
        "3.1.1.全角文字と半角文字の間": false,
        "3.1.2.全角文字どうし": false,
        "3.3.かっこ類と隣接する文字の間のスペースの有無": false,
        "4.1.3.ピリオド(.)、カンマ(,)": false,
        "4.2.6.ハイフン(-)": false,
        "4.2.7.コロン(：)": false,
        "4.2.8.セミコロン(;)": false,
        "4.3.1.丸かっこ（）": false,
        "4.3.2.大かっこ［］": false,
        "4.3.6.中かっこ{ }": false,
        "4.3.7.山かっこ<>": false,
        "4.3.5.二重引用符": false
    },
    "no-mix-dearu-desumasu": true,
    "prh": {
            "rulePaths": [
              "~/.textlint.d/prh.yml"
            ]
    }
  }
}
