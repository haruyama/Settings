set visualbell
set hlsearch
set ignorecase
set focuscontent
set complete=sl

set showstatuslinks=1
set noinsertmode

set hintchars=0123456789abcdefghijklmnopqrstuvwxyz

noremap <C-h> <CR>
inoremap <C-b> <Left>
cnoremap <C-b> <Left>
inoremap <C-f> <Right>
cnoremap <C-f> <Right>
inoremap <C-n> <Down>
cnoremap <C-n> <Down>
inoremap <C-p> <Up>
cnoremap <C-p> <Up>

javascript <<EOM
liberator.globalVariables.copy_templates = [
{ label: 'title'       , value: '%TITLE%'                     , map: 'Y' } ,
{ label: 'titleAndURL' , value: '%TITLE% - %URL%'             , map: ',yp' } ,
{ label: 'seesaa'      , value: '[[%TITLE%>%URL%]]'           , map: ',ys' } ,
{ label: 'markdown'    , value: '[%TITLE%](%URL%)'            , map: ',ym' } ,
{ label: 'anchor'      , value: '<a href="%URL%">%TITLE%</a>' , map: ',ya' } ,
{ label: 'redmine'     , value: '"%TITLE%":%URL%'             , map: ',yr' } ,
];
EOM
